{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,
  "functions": {
    "api/client.js": {
      "includeFiles": "clients/**/*"
    }
  },
  "redirects": [
    {
      "source": "/:path((?!api/).*)",
      "has": [
        {
          "type": "host",
          "value": "squareelectric.bookedjobs.ca"
        }
      ],
      "destination": "https://squareelectric.bookedjobs.ca/api/client",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/s/:client",
      "destination": "/api/client?client=:client"
    }
  ]
}
